        <% employees.forEach((employee)=>{%>
                <div data-role="collapsible" data-filtertext="<%= employee.workerNumber %> <%= employee.workerNumber %> ">
                    <h1><%= employee.workerNumber %></h1>
                    <ul data-role="listview" data-inset="false">
                        <li>Nombre(s): <b><%= employee.name %></b></li>
                        <li>Apellidos: <b><%= employee.lastname %></b></li>
                        <li>Departamento:<b> <%= employee.department %></b></li>
                        <li>Edad: <b><%= employee.age %></b></li>
                        <li>Salario: <b><%= employee.salary %></b></li>
                        <li>clasificación: <b><%= employee.rating %></b></li>
                        
                    </ul>
                    <br>
                    
                    <a href="<%= employee.workerNumber %>" class="ui-btn" style="background-color: rgb(241, 241, 101); color: rgb(48, 47, 47); font-size: large;">Editar</a>
                    <a href="/delete/<%= employee.workerNumber%>" class="ui-btn" style="background-color: rgb(245, 103, 103); color: rgb(54, 54, 54); font-size: large;">Eliminar</a>
                    </form>


                </div>
        
            
        <% }) %>
