  <div data-role="page" id="registro" >

      <!-- Encabezado con barra de navegación -->
      <div data-role="header" data-position="fixed">
        <h1>Registro de empleados</h1>
        <a href="#inicio" data-icon="home" class="ui-btn-right">Inicio</a>
      </div>
    
      <!-- Contenido -->
      <div data-role="content">
    
        <!-- Formulario de Registro -->
        <form action="/" method="post">
          <label for="workerNumber">Numero de trabajador:</label>
          <input type="number" name="workerNumber" id="workerNumber" required>
    
          <label for="name">Nombre(s):</label>
          <input type="text" name="name" id="name" required>
    
          <label for="lastname">Apellidos:</label>
          <input type="text" name="lastname" id="lastname" required>
    
          <label for="department">Departamento:</label>
          <input type="text" name="department" id="department" required>
    
          <label for="age">Edad:</label>
          <input type="number" min="18" name="age" id="age" required>
    
          <label for="salary">Salario:</label>
          <input type="text" name="salary" id="salary" required>
    
          <label for="rating">clasificación:</label>
          <input type="number" min="1" max="10"  name="rating" id="rating" required>
    
          <button type="submit">Registrar Empleado</button>
        </form>
    
      </div>
    
      <!-- Pie de página -->
      <div data-role="footer" data-position="fixed">
        <p style="text-align: center;">Github/JazzoLopez </p>
      </div>
    </div>
  </div>

