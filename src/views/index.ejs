  <div data-role="page" id="productsTable">
    <!-- header -->
    <div data-role="header">
      <p style="text-align: center;">Empleados</p>
      <div data-role="navbar">
        <ul>
          <li><a href="#inicio" data-icon="home" class="ui-btn-active">Inicio</a></li>
          <li><a href="#registro" data-icon="plus">Registrar</a></li>
          <li><a href="/mejor_empleado" data-icon="phone">Contactos</a></li>
        </ul>
      </div>
    </div>
    <!-- /header -->
    <!-- content -->
    <div data-role="content">
  
      <!-- Información de abarrotes o productos -->
      <h2>Empleados registrados</h2>
      <p>Deseas regresar a la primer pagina, presiona <a href="#inicio">aqui</a></p>
  
      <!-- Imágenes -->
     
  
      <!-- Tabla con datos -->
